@using DotNet7.Models.ViewModel
@model GetAllMembersVm

@{
    ViewData["Title"] = "All Members";

    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row">
    <!--  page header -->
    <div class="col-lg-12">
        <h1 class="page-header">All Members</h1>
    </div>
    <!-- end  page header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                All Records

            </div>
            <div class="panel-body">

                @if (Model != null && Model.MemberList.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Sr No</th>
                                    <th>Membership Number</th>
                                    <th>Name</th>
                                    <th>Mobile Number</th>
                                    <th>Email Address</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var srNO = 1;
                                }
                                @*  @for (int i = 0; i < Model.MemberList.Count; i++)
                            {
                            <tr class="odd gradeX">
                            <td class="center">@srNO</td>
                            <td class="center">@Model.MemberList.Rows[i]["Fld_MembershipNumber"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_MemberName"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_AccountNumber"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_Amount"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_SchemeName"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_SchemeType"]</td>
                            <td class="center">@AccountsListData.Rows[i]["Fld_Status"]</td>
                            </tr>
                            srNO++;
                            }*@

                                @foreach (var item in Model.MemberList)
                                {
                                    <tr class="odd gradeX">
                                        <td class="center">@srNO</td>
                                        <td class="center">@item.Fld_MembershipNumber</td>
                                        <td class="center">@item.Fld_MemberName</td>
                                        <td class="center">@item.Fld_MobileNumber</td>
                                        <td class="center">@item.Fld_EmailAddress</td>
                                    </tr>
                                    srNO++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <h3 class="text-center">No Records Availble!</h3>
                }
            </div>
        </div>
        <!--End Advanced Tables -->

    </div>
</div>



@section Scripts{
    <!-- Page-Level Plugin Scripts-->
    <script src="/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });

    </script>
    <script>
        $('#side-menu li').removeClass('selected')
        $('#menu-nav-allmember').addClass('selected')

    </script>

}

